<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="258.0" prefWidth="324.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nttd.wtdoodle.Client.Lobby.GameCreator">
   <children>
      <Label layoutX="119.0" layoutY="14.0" prefHeight="30.0" prefWidth="86.0" text="Game Data" textFill="#1b1b1b">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
      <Label layoutX="29.0" layoutY="66.0" text="Max Players">
         <graphic>
            <TextField fx:id="tf_maxPlayers" promptText="Max 8 players" />
         </graphic>
      </Label>
      <Label layoutX="29.0" layoutY="111.0" text="Guessing Time">
         <graphic>
            <TextField fx:id="tf_guessingTime" promptText="Time in sec" />
         </graphic>
      </Label>
      <Button fx:id="btn_createGame" layoutX="112.0" layoutY="200.0" mnemonicParsing="false" style="-fx-background-color: #E96151;" text="Create Game" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Label layoutX="29.0" layoutY="152.0" text="Rounds">
         <graphic>
            <TextField fx:id="tf_numRounds" promptText="Time in sec" />
         </graphic>
      </Label>
   </children>
</AnchorPane>
